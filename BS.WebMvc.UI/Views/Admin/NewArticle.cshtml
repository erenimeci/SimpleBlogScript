@using BS.WebMvc.UI.Models
@model BS.WebMvc.UI.Models.ArticleViewModel

@{
    ViewBag.Title = "NewArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewArticle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="input-group">
        <div class="input-group-addon" id="txtArticleTitle">
            ArticleTitle
        </div>

        @Html.TextBoxFor(e => e.Article.ArticleTitle, new { @class = "form-control", placeholder = "ArticleTitle", aria_describedby = "txtArticleTitle" })
    </div>
    <br />

    <div class="input-group">
        <div class="input-group-addon" id="txtArticleText">
            ArticleText
        </div>
        @Html.TextBoxFor(e => e.Article.ArticleText, new { @class = "form-control", placeholder = "ArticleText", aria_describedby = "txtArticleText" })
    </div>
    <br />
    <div class="input-group">
        <input type="submit" class="btn btn-success" value="Kaydet" />
    </div>
    <br />
    <div class="input-group">
        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status">
                @ViewBag.Result
            </div>
        }
    </div>

}
